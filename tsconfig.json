{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "target": "ES2020",
    "module": "CommonJS",
    "checkJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}